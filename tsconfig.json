{
  "compilerOptions": {
    "lib": ["es2017"],
    "target": "ES6",
    "module": "commonjs",
    "removeComments": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist/",
    "types": [
      "node",
      "mocha",
      "chai",
      "webrtc",
      "puppeteer",
      "websocket"
    ],
    "skipLibCheck": true,
    "paths": {
      "@src/*" : ["./src/*"],
      "@test/*": ["./test/*"],
      "@dist/*": ["./dist/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
