{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2017"],
    "module": "commonjs",
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist/",
    "allowJs": false,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noEmitOnError": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "mocha",
      "chai",
      "webrtc",
      "puppeteer"
    ],
    "paths": {
      "@src/*" : ["src/*"],
      "@lib/*" : ["lib/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["src/client.ts"],
}
